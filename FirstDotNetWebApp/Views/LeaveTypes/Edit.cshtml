@model FirstDotNetWebApp.Models.LeaveTypeVM

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-5 my-4">Edit Leave Type</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="DefaultDays" class="control-label"></label>
                <input asp-for="DefaultDays" class="form-control" />
                <span asp-validation-for="DefaultDays" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end">
            <div class="me-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
            </div>
        </form>
    </div>
</div>

